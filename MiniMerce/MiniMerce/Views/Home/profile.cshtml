                    <a href="#"
                       class="list-group-item list-group-item-action sideDashItem"></a>
                    <a href="../html/coming soon.html"
                       class="list-group-item list-group-item-action sideDashItem"></a>
                    <a href="#"
                       class="list-group-item list-group-item-action sideDashItem"></a>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card userProfileSection">
                    <div class="container emp-profile">

                        <div class="row">
                            <div class="col-md-4">
                                <div class="profile-img">
                                    @if (Model.image == null)
                                    {
                                        <img src="~/img/my images/profile-icon-design-free-vector.jpg" alt="" />
                                    }
                                    else
                                    {
                                        <img src="~/img/my images/@Model.image" alt="" />
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <br />
                                <div class="profile-head">
                                    <h5>@Model.name</h5>
                                    <br /><br /><br />
                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active"
                                               id="home-tab"
                                               data-toggle="tab"
                                               href="#home"
                                               role="tab"
                                               aria-controls="home"
                                               aria-selected="true">User Information</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link"
                                               id="profile-tab"
                                               data-toggle="tab"
                                               href="#profile"
                                               role="tab"
                                               aria-controls="profile"
                                               aria-selected="false">؟</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-2">

                                @Html.ActionLink("Edit Profile", "editProfile", new { id = Model.ID }, htmlAttributes: new { @class = "profile-edit-btn", style = "width: 7em; " })

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-8">
                                <div class="tab-content profile-tab" id="myTabContent">
                                    <div class="tab-pane fade show active"
                                         id="home"
                                         role="tabpanel"
                                         aria-labelledby="home-tab">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>User ID</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>@Model.ID</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Name</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>@Model.name</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Email</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>@Model.email</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Phone</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>@Model.phone</p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Address</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p>@Model.address_country - @Model.address_city - @Model.address_street</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade"
                                         id="profile"
