@model MiniMerce.Models.user

@{
    ViewBag.Title = "profile";
}

<main>



    <div class="container emp-profile">

        <div class="row">

            <div class="col-md-3 userSideDash">
                <div class="list-group userSideDashList">
                    <a href="@Url.Action("Index", "Home")"
                       class="list-group-item list-group-item-action sideDashItem">
                        <img src="~/img/my images/minimerce-high-resolution-logo-transparent.png" alt="" />
                    </a>
                    <a href="@Url.Action("profile", "Home", new { id = Model.ID })"
                       class="list-group-item list-group-item-action sideDashItem active" style=" background-color: #e7ab3c; border: #e7ab3c; color: black">User Profile</a>
                    <a href="@Url.Action("editpassword", "home", new { id = Model.ID })"
                       class="list-group-item list-group-item-action sideDashItem">Change Password</a>
                    <a href="@Url.Action("editaddress", "home", new { id = Model.ID })"
                       class="list-group-item list-group-item-action sideDashItem">Change Address</a>
                    <a href="#"
                       class="list-group-item list-group-item-action sideDashItem">Order History</a>
                    <a href="#"
                       class="list-group-item list-group-item-action sideDashItem">Reviews</a>
                    <a href="#"
